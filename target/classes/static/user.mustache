<div class="card">
	<div class="card-header">
		{{#insert}}
			Add new User
		{{/insert}}
		{{#edit}}
			Edit User
		{{/edit}}
	</div>
	<div class="card-body">
		<form action="#{{action}}">
			<fieldset class="form-group">
				{{#insert}}
					<dl>
						<dt><label for="publicKey">Public Key</label></dt>
						<dd><input class="form-control" name="publicKey" type="text" required /></dd>
					</dl>
				{{/insert}}
				<dl>
					<dt><label for="name">Name</label></dt>
					<dd><input class="form-control" name="name" type="text" value="{{name}}" required /></dd>
				</dl>
				<dl>
					<dt><label for="email">Email</label></dt>
					<dd><input class="form-control" name="email" type="email" value="{{email}}" required /></dd>
				</dl>
			</fieldset>
			<input type="submit" value="{{action}}" class="btn btn-primary" />
			{{#edit}}
				<input type="hidden" name="id" value="{{id}}" />
			{{/edit}}
			{{#exclude}}
				<input type="submit" value="exclude" class="btn btn-danger" />
			{{/exclude}}
		</form>
	</div>
</div>